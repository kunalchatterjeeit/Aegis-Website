@model List<Aegis.Model.ProductCategory>

<div class="tp-banner-container">
    <div style="border-width: 0px; margin: 10% 0px 0px; padding: 0px; min-height: 53px; height: 53px;">
        <nav class="category-menu">
            <ul class="dropdown">
                @foreach (var item in @Model)
                {
                    <li>
                        @{ 
                            if (item.Selected)
                            {
                                <a class="active" href='@Url.Action("Index", "Product", new { id = item.SeoUrl })'>@item.Name</a>
                            }
                            else
                            {
                                <a href='@Url.Action("Index", "Product", new { id = item.SeoUrl })'>@item.Name</a>
                            }
                        }
                    </li>
                }

