@model AegisWebsite.Models.ContactModel

@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page title -->
<div class="page-title parallax-style parallax1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-title-heading">
                    @*<h2>About us</h2>*@
                </div>
                <!-- /.page-title-heading -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /.page-title -->

<div class="page-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="flat-wrapper">
                <div class="breadcrumbs">
                    <h2 class="trail-browse">You are here:</h2>
                    <ul class="trail-items">
                        <li class="trail-item"><a href='@Url.Action("Index", "Home")'>Home</a></li>
                        <li>Support or Service</li>
                    </ul>
                </div>
                <!-- /.breadcrumbs -->
            </div>
            <!-- /.flat-wrapper -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /.page-breadcrumbs -->

<div class="flat-row">
    <div class="container">
        <div class="row">
            @if (TempData["Message"] != null)
            {
                if (!TempData["Message"].ToString().Contains("can't"))
                {
                    <span id="spanSuccess" runat="server" style="line-height: 30px; border: 1px solid #72E837; float: left; background: #CEF7B9; font-size: 10pt; padding: 5px 2px 5px 30px; color: #58BC21; width: 100%; position: relative; margin: 0px 30px 20px 0px">
                        <span style="margin: 0px 10px">@TempData["Message"].ToString()</span>
                    </span>
                }
                else
                {
                    <p>
                        <span id="spanError" runat="server" style="line-height: 30px; border: 1px solid #FF0602; float: left; background: #FFB793; font-size: 10pt; padding: 5px 2px 5px 30px; color: #ED1410; width: 100%; position: relative; margin: 0px 30px 20px 0px">
                            <span style="margin: 0px 15px">@TempData["Message"].ToString()</span>
                        </span>
                    </p>
                }

            }
        <div class="col-md-4">
            <h5 class="scheme">Aegis Solutions Service Contact</h5>
            <p>
                <b>+91 8335810009</b>
            </p>
            <h5 class="scheme">Aegis Solutions Support Contact</h5>
            <p>
                <b>+91 8420001111</b>
            </p>
        </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-8">
                    <p>Please fill out the following form and a representative will contact you.</p>
                    <div class="flat-divider d10px"></div>
                    <form id="contactform" method="post" action="#">
                        <div class="row">
                            <div class="col-md-6">
                                <p>
                                    @Html.TextBoxFor(m => m.Name, new { id = "name", placeholder = "Name" })
                                </p>

                                <p>
                                    @Html.TextBoxFor(m => m.Email, new { id = "email", placeholder = "Email" })
                                </p>

                                <p>
                                    @Html.TextBoxFor(m => m.Phone, new { id = "phone", placeholder = "Phone Number" })
                                </p>
                            </div>
                            <!-- /.col-md-6 -->

                            <div class="col-md-6">
                                <p>
                                    @Html.TextAreaFor(m => m.Comment, new { placeholder = "Comment" })
                                </p>
                                <span class="form-submit">
                                    <input name="submit" type="submit" id="submit" class="submit" value="Sent Request">
                                </span>
                            </div>
                            <!-- /.col-md-6 -->
                        </div>
                        <!-- /.row -->
                    </form>
                </div>
            }
            <!-- /.col-md-8 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /.flat-row -->
