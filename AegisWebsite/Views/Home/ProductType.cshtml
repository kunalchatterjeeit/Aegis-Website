@model List<Aegis.Model.ProductType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Contents/javascript/jquery.min.js"></script>
<link href="~/Contents/animate.css" rel="stylesheet">
<link href="~/Contents/layout.css" rel="stylesheet" type="text/css" />

<div class="content-lg container">
    <!-- Masonry Grid -->
    <div class="masonry-grid row">
        @*<div class="masonry-grid-sizer col-xs-6 col-sm-6 col-md-12"></div>*@
        @{ foreach (Aegis.Model.ProductType productType in Model)
            {
                <a href="@Url.Action("Index", "Product", new { id = productType.SeoUrl})">
                    <div class="masonry-grid-item col-xs-12 col-sm-6 col-md-4 sm-margin-b-30">
                        <div class="margin-t-30 margin-b-20">
                            <h4 class="wow fadeInDown">@productType.Name</h4>
                            <p class="wow fadeInDown">@productType.Description</p>
                        </div>
                        <img class="full-width img-responsive wow fadeInUp" src="@productType.ContentPath" alt="@productType.SeoUrl" data-wow-duration=".3" data-wow-delay=".2s">
                    </div>
                </a>
            }
        }

